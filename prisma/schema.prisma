// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum RefundStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id           Int       @id @default(autoincrement())
  firstName     String? @map("first_name")
  lastName     String? @map("last_name")
  email        String    @unique
  passwordHash String    @map("password_hash")
  role         Role    @default(USER)
  refreshToken String?   @map("refresh_token")
  isInactive    Boolean   @default(false) @map("is_inactive")
  forgotHashKey      String?   @unique
  forgotHashExpiresAt DateTime?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

   uploads               Upload[]
  subscriptions         UserSubscription[]
  payments              Payment[]
  refunds               Refund[]
  

  @@map("users")
}

model Upload {
  id                  Int       @id @default(autoincrement())
  userId              Int       @map("user_id")
  cloudinaryPublicId  String    @map("cloudinary_public_id")
  cloudinaryUrl       String    @map("cloudinary_url")
  cloudinarySecureUrl String    @map("cloudinary_secure_url")
  resourceType        String?   @map("resource_type")
  format              String?
  width               Int?
  height              Int?
  bytes               Int?
  createdAt           DateTime  @default(now()) @map("created_at")
  
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("uploads")
}

model Support {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  category  String
  priority  String
  message   String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

    @@map("supports")
}

model SubscriptionPlan {
  id            Int       @id @default(autoincrement()) 
  name          String    @unique
  price         Float
  duration      Int      // Month
  description   String?
  isRecommended Boolean   @default(false)

  features      Feature[]
  subscriptions UserSubscription[]

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

   isDeleted     Boolean   @default(false)
  deletedAt     DateTime?

  @@map("subscription_plans")
}

model Feature {
  id        Int       @id @default(autoincrement()) 
  planId    Int      
  name      String
  description String?

  plan      SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

   isDeleted     Boolean   @default(false)
  deletedAt     DateTime?

  @@map("features")
}

model UserSubscription {
  id                     Int      @id @default(autoincrement())
  userId                 Int     
  planId                 Int     
  startDate              DateTime @map("start_date")
  endDate                DateTime @map("end_date")
  stripeSubscriptionId   String?   @unique
  paymentId              Int?     

  user                   User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                   SubscriptionPlan @relation(fields: [planId], references: [id])
  payment                Payment?         @relation(fields: [paymentId], references: [id])

    createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

   isDeleted     Boolean   @default(false)
  deletedAt     DateTime?

  @@map("user_subscriptions")
}

model Payment {
  id               Int           @id @default(autoincrement())
  userId           Int          
  amount           Float
  status           PaymentStatus
  stripePaymentId  String        @unique

  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription     UserSubscription[]
  refund           Refund?

    createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

   isDeleted     Boolean   @default(false)
  deletedAt     DateTime?

  @@map("payments")
}

model Refund {
  id              Int           @id @default(autoincrement()) 
  paymentId       Int           @unique 
  userId          Int           
  amount          Float
  status          RefundStatus
  stripeRefundId  String        @unique

  payment         Payment       @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

   isDeleted     Boolean   @default(false)
  deletedAt     DateTime?

  @@map("refunds")
}
